/* components/calculate.wxss */
.content {
  width: 94%;
  margin: 10px 3%;
}
.ulabel {
  position:relative;
	width:100%;
	margin:10px auto;
	display:inline-block;
}
.ulabel:after {
  content:"";
	display:inline-block;
	width:0;
	height:2px;
	background:red;
	transition:width 1s;
	position:absolute;
	bottom:1px;
	left:1px;
}
.uinput {
  width:100%;
	height:40px;
	border:1px solid #dbdbdb;
	outline:none;
	font-size:20px;
	text-indent:10px;
}